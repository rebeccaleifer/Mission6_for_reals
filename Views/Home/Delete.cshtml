@{
    ViewData["Title"] = "Delete Task";
}

@model TaskResponse

<h2>Confirm Deletion</h2><br />
<h3>Are you sure you want to delete the following task:</h3><br />
<h3><i>@Model.TaskDescription</i></h3><br />

<form method="post" class="special" asp-controller="Home" asp-action="Delete">
    <button type="submit" class="btn btn-outline-primary" style="background-color: red; color: white;">Delete</button>
    <a asp-controller="Home" asp-action="ListTasks" class="btn btn-outline-primary" style="background-color: #0D1E33; color: white;">Cancel</a>

    <input type="hidden" asp-for="TaskId" />
</form>
