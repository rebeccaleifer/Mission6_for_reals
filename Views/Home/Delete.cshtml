@{
    ViewData["Title"] = "Delete Task";
}

@model TaskResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete your task called:  @Model.TaskDescription?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ListTasks" class="btn btn-outline-primary">Cancel</a>

    <input type="hidden" asp-for="TaskId" />
</form>
