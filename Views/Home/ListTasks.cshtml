                                <a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">Delete</a>
                            </div>                       
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            <p style="font-weight: bold">Quadrant 4</p>
            <div class="quad">
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 4 && x.Completed == false)
